{
  "name": "opencode-agent",
  "version": "0.4.0",
  "description": "Azure DevOps extension task library with TypeScript, Jest, ESLint, and Prettier",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:task": "node build-task.js",
    "debug": "tsx src/debug.ts",
    "start": "node dist/index.js",
    "prestart": "npm run build",
    "clean": "rimraf dist coverage tasks/opencode/dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "package": "npm run build:task && tfx extension create --manifest-globs vss-extension.json",
    "package:dev": "npm run build:task && tfx extension create --manifest-globs vss-extension.json --override \"{\\\"public\\\": false}\"",
    "publish": "npm run build:task && tfx extension publish --manifest-globs vss-extension.json"
  },
  "keywords": [
    "azure-devops",
    "azure-pipelines",
    "task",
    "extension",
    "typescript",
    "build",
    "ci-cd"
  ],
  "author": "Martin Trojan",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/opencode-ado"
  },
  "bugs": {
    "url": "https://github.com/yourusername/opencode-ado/issues"
  },
  "homepage": "https://github.com/yourusername/opencode-ado#readme",
  "dependencies": {
    "@opencode-ai/sdk": "^1.0.207",
    "azure-pipelines-task-lib": "^5.2.4"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "tfx-cli": "^0.22.6",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
