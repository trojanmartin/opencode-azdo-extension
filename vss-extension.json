{
  "manifestVersion": 1,
  "id": "OpenCodeAgent",
  "name": "OpenCodeAgent",
  "version": "0.4.0",
  "publisher": "martin-trojan",
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "description": "Azure DevOps pipeline task that responds to PR comments containing '/oc' or '/opencode' by executing the OpenCode AI agent to analyze code, make changes, and commit back to pull requests",
  "categories": ["Azure Pipelines"],
  "tags": ["build", "release", "azure-pipelines", "tasks", "ai", "code-review", "opencode"],
  "content": {
    "details": {
      "path": "README.md"
    }
  },
  "links": {
    "getstarted": {
      "uri": "https://github.com/trojanmartin/opencode-azdo-extension"
    },
    "support": {
      "uri": "https://github.com/trojanmartin/opencode-azdo-extension/issues"
    },
    "repository": {
      "uri": "https://github.com/trojanmartin/opencode-azdo-extension"
    },
    "opencode": {
      "uri": "https://opencode.ai/"
    }
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/trojanmartin/opencode-azdo-extension"
  },
  "files": [
    {
      "path": "tasks/opencode"
    }
  ],
  "contributions": [
    {
      "id": "opencode",
      "type": "ms.vss-distributed-task.task",
      "targets": ["ms.vss-distributed-task.tasks"],
      "properties": {
        "name": "tasks"
      }
    }
  ]
}
