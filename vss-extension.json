{
  "manifestVersion": 1,
  "id": "OpenCodeAgent",
  "name": "OpenCode AI Agent",
  "version": "0.17.0",
  "publisher": "martin-trojan",
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "description": "Run OpenCode AI agents on pull requests. Use review mode for automated PR build validation or command mode for comment-triggered runs.",
  "categories": [
    "Azure Pipelines"
  ],
  "tags": [
    "azure-pipelines",
    "ai",
    "code-review",
    "opencode",
    "pull-request",
    "automation"
  ],
  "content": {
    "details": {
      "path": "README.md"
    }
  },
  "links": {
    "getstarted": {
      "uri": "https://github.com/trojanmartin/opencode-azdo-extension"
    },
    "support": {
      "uri": "https://github.com/trojanmartin/opencode-azdo-extension/issues"
    },
    "repository": {
      "uri": "https://github.com/trojanmartin/opencode-azdo-extension"
    },
    "opencode": {
      "uri": "https://opencode.ai/"
    }
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/trojanmartin/opencode-azdo-extension"
  },
  "files": [
    {
      "path": "tasks/opencode"
    }
  ],
  "contributions": [
    {
      "id": "opencode",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "tasks"
      }
    }
  ]
}
